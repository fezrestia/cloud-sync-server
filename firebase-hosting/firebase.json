{
  "hosting": {
    "public": "dst",

    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],

    "rewrites": [
        {
            "source": "/",
            "destination": "/entry"
        }
    ],

    "redirects": [
        {
            "source": "/index",
            "destination": "/entry",
            "type": 301
        }
    ],

    "cleanUrls": true,
    "trailingSlash": false
  }
}
