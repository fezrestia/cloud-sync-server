<p><strong>0 SIM STATS ALL LOG</strong></p>

<p>
  <%= link_to "Register New Log", new_zero_sim_usage_path %>
</p>

<table>
  <tr>
    <th>ID</th>
    <th>Year</th>
    <th>Month</th>
    <th>Day</th>
    <th>Day Used</th>
    <th>Month Used Current</th>
    <th>Created at</th>
    <th>Updated at</th>
  </tr>

  <% @zero_sim_usages.each do |usage| %>
    <tr>
      <td><%= usage.id %></td>
      <td><%= usage.year %></td>
      <td><%= usage.month %></td>
      <td><%= usage.day %></td>
      <td><%= usage.day_used %></td>
      <td><%= usage.month_used_current %></td>
      <td><%= usage.created_at %></td>
      <td><%= usage.updated_at %></td>

      <td><%= link_to "Show", zero_sim_usage_path(usage.id) %></td>
      <td><%= link_to "Edit", edit_zero_sim_usage_path(usage.id) %></td>
      <td><%=
          link_to "Delete",
          zero_sim_usage_path(usage.id),
          method: :delete,
          data: { confirm: "Are you sure ?" }
      %></td>
    </tr>
  <% end %>
</table>

<p>
  <%= link_to "Cloud Sync Service Root Top", root_path %>
</p>

<div>
  <%= line_chart [ {name: "2 month ago",  data: @graph_data_1},
                   {name: "Last month",   data: @graph_data_2},
                   {name: "Now",          data: @graph_data_3} ],
      id: '0 SIM Log Stats',
      label: 'Log',
      xtitle: 'Day',
      ytitle: 'MB',
      discrete: true,
      library: {
        backgroundColor: 'aliceblue',
        width: 960,
        height: 540,

        lineWidth: 2,
        colors: ['#FFFF7F', '#BFFFBF', '#7FFF7F'],
        curveType: 'none',

        pointShape: 'circle',
        pointSize: 0,
        pointVisible: 'true',

        chartArea: {
          backgroundColor: 'mintcream',
          width: 870,
          height: 440,
          left: 60,
          top: 30
        },

        hAxis: {
          slantedText: 'true',
          slantedTextAngle: 90,
          showTextEvery: 1,
          textStyle: {
            color: 'black',
          }

        },

        vAxis: {
          baseline: 500,
          baselineColor: '#FFBF7F',
          gridlines: {
            color: 'whitesmoke'

          },
          ticks: [0, 100, 200, 300, 400, 500, 600],
          maxValue: 600,
          minValue: 0,
          showTextEvery: 1,
          textStyle: {
            color: 'black',
          }

        },

        crosshair: {
          color: 'cyan',
          trigger: 'both'

        },

        legend: {
          position: 'in',
          alignment: 'start'

        },

    } %>
</div>

